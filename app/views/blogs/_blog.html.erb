<div class="blog-post">
    <h2 class="blog-post-title"><%= blog.title %></h2>
    <p class="blog-post-meta"><%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
    <p>
        <%= blog.body %>
    </p>
    <p><%= link_to 'Show', blog %></p>
    <p><%= link_to 'Edit', edit_blog_path(blog)   if logged_in?(:site_admin) %></p>
    <p><%= link_to 'Destroy', blog, method: :delete,
                                 data: { confirm: 'Are you sure?' }  if logged_in?(:site_admin)  %></p>
</div>