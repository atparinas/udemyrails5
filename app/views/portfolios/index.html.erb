<h1> Portfolio Items </h1>

<%# <a href="portfolios/new"> Create New Portfolio </a> %>

<%= link_to 'Create New Portfolio', new_portfolio_path %>

<% @portfolios.each do |portfolio| %>

    <h2> <%= link_to portfolio.title, portfolio_path(portfolio.id)  %> </h2>
    <h3> <%= portfolio.subtitle %> </h3>
    <p> <%= portfolio.body %> </p>
    <% # <%= image_tag portfolio.main_image if !portfolio.main_image.nil? %> 

    <%= link_to 'Edit', edit_portfolio_path(portfolio.id) %>

<% end %>