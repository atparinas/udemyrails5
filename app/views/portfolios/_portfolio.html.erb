
<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <%= image_tag portfolio.main_image if !portfolio.main_image.nil? %> 
        <div class="card-body">
            <span> <%= link_to portfolio.title, portfolio_show_path(portfolio.id)  %> </span>
            <span> <%= portfolio.subtitle %> </span>
            <% if logged_in?(:site_admin) %>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <%= link_to 'Edit', edit_portfolio_path(portfolio.id), class: "btn btn-sm btn-outline-secondary" %>
                        <%= link_to 'Delete', portfolio_path(portfolio),
                            method: :delete, 
                            data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-outline-secondary"  %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

